
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path "banner_image.jpg" %>);">
  <div class="container">
    <h1>Cookbook</h1>
    <p>Save your favourite recipes</p>
  </div>
</div>


<div class="container">
  <div class="d-flex justify-content-between align-items-center py-3">
    <h2>View your cookbook categories here</h2>
    <%= link_to "new category", new_category_path, class: "btn btn-primary button-font-white"%>
  </div>
  <div class="card-container d-flex justify-content-between">
    <% @categories.each do |category| %>
      <% if category.photo.attatched? %>
       <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @category.photo.key, height: 300, crop: :fill %>')">
       <% else %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <% end %>
        <h3><%= link_to category.name.capitalize, category_path(category) %></h3>
        <p><%= category.recipes.length %> recipes </p>
        <%= link_to "❌", category_path(category), class: "card-category-icon", data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>
    <% end %>
  </div>
</div>
